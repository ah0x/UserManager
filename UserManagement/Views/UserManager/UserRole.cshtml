@model UserManagement.UserManager.AuthModels.ManageUserRoleViewModel

@{
    Layout = "_Layout";
}

<form asp-controller="UserManager" asp-action="UserRole" method="post">
    @foreach (var role in @Model.UserRoles)
    {
        <div class="form-check form-switch">
            @if (@role.Selected)
            {
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" checked>
        
            }
            else
            {
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" >
                
            }
            <label class="form-check-label" for="flexSwitchCheckDefault">@role.RoleName</label>
        </div>
    }
    <button type="submit" >Update</button>
</form>