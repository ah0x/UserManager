@model UserManagement.UserManager.AuthModels.ManageUserRoleViewModel
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2> Add/Remove Roles for User / @ViewBag.UserName.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.UserRoles.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.UserRoles[i].RoleName" />
                    <input asp-for="@Model.UserRoles[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.UserRoles[i]Selected">
                        @Model.UserRoles[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a asp-controller="UserMangment" asp-action="Index" class="btn btn-primary" style="width:auto">Back</a>
        </div>
    </div>
</form>