@model UserManagement.Areas.Identity.Pages.Account.ResetPasswordModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br /><br /><br />
<div class="container">
    <h3>Change User Password</h3>
    <br />
    <form asp-controller="UserManager" asp-action="Index" method="post">
        <div class="row">
        <input id="UserId" value="@ViewBag.UserId" type="hidden" />
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Input.Password" type="password" id="Password" class="form-control" autocomplete="new-password" aria-required="true" required/>
                    <label style="color:black" class="form-label">New Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <br />
                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" type="password" id="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" required/>
                    <label style="color:black" class="form-label">Confirm New Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <br />
                <button id="UpdatePassword" type="submit" class="w-100 btn btn-lg btn-primary">Update password</button>
            </div>
        </div>
    </form>
    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
</div>




<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<!-- https://jquery.com/download/ -->

<script>
     $(function () {
            $("#UpdatePassword").click(function () {
                $.ajax({
                    type: "POST",
                    url: "/UserManager/ResetPassword",
                    data: { "UserId": $("#UserId").val() , "Password": $("#Password").val() , "ConfirmPassword": $("#ConfirmPassword").val()},
                    success: function () {
                    },
                    error: function () {
                   }
                });
            });
        });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}